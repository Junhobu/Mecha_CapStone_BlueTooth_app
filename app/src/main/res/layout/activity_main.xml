<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_disconnect"

    android:orientation="vertical">

    <TextView
        android:id="@+id/connectname"
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:gravity="center"
        android:text="연결 기기 명"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:text="주소"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/nowstate"
            android:layout_width="350dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetooth" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="비연결상태"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/state_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:includeFontPadding="false"
            android:text="탭해서 블루투스 연결"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_round"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="지금 PM2.5"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/pm25image"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/smile" />

            <TextView
                android:id="@+id/pm25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"
                android:hint="PM2.5"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="지금 PM10"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/pm10image"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/smile" />

            <TextView
                android:id="@+id/pm10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"
                android:hint="PM10"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/power"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/power"
                android:text="AUTO"
                android:textOff=" "
                android:textOn=" " />

            <TextView
                android:id="@+id/power_onoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:includeFontPadding="false"
                android:text="꺼짐"
                android:textColor="#80000000"
                android:textSize="20sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:textOff=" "
                android:textOn=" "
                android:background="@drawable/auto"
                android:text="power" />

            <TextView
                android:id="@+id/auto_onoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:includeFontPadding="false"
                android:text="꺼짐"
                android:textColor="#80000000"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="18dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/help"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/help"
                android:text="help" />

            <TextView
                android:id="@+id/wind_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:includeFontPadding="false"
                android:text="도움말"
                android:textColor="#80000000"
                android:textSize="20sp" />
        </LinearLayout>



    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:id="@+id/containers">

    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottom_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:itemBackground="@color/white"
        app:menu="@menu/bottom_menu"
        />


</LinearLayout>